<div>

  <h2>Auction Items for <%= @category.name %></h2>

  <ul>
    <% @auctions.each do |auction| %>


      <li>
        <a href="/categories/<%= @category.id %>/auctions/<%= auction.id %>"><%= auction.name %></a><br><span><%= auction.description[0..40] %></span>
      </li>
    <% end %>
  </ul>

  <% if session[:user_id] != nil %>
    <a href="/categories/<%= @category.id %>/auctions/new"> Create an auction</a>
  <% end %>

</div>
