<% if @errors %>
  <% @errors.each do |error| %>
    <h2 class="error">error: <%= error %></h2>
  <% end %>
<% end %>

<div id="new-form">
  <form id='register_form' action='/users' method='post'>
    <label class="block mar-b-1">Username:</label>
    <input type='text' name='user[username]' placeholder='username' class="block w-100 no-outline no-border pad-1 mar-b-2"><br>
    <label class="block mar-b-1">Email:</label>
    <input type='text' name='user[email]' placeholder='email' class="block w-100 no-outline no-border pad-1 mar-b-2"><br>
    <label class="block mar-b-1">Password:</label>
    <input type='password' name='user[password]' placeholder='At least 6 Characters'class="block w-100 no-outline no-border pad-1 mar-b-2"><br>
    <input type='submit' value='Submit' class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
  </form>
</div>
